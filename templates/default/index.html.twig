{% extends 'base.html.twig' %}

{% block title %}Homepage{% endblock %}

{% block body %}
    <div class="heading">
        <img class="logo" src="/assets/img/logo.png" alt="">
        <div class="h1 text-uppercase title d-none d-md-block"><span class="text-warning">32</span> participants</div>
        <div class="h1 text-uppercase sub-title d-none d-md-block"><span class="text-warning">1</span> seul vainqueur</div>
        <a class="btn btn-lg btn-warning font-weight-bold text-uppercase text-light" href="{{ path('register') }}">Je m'inscris</a>
    </div>
    <div class="container-fluid with-content-gutters">
        {% if nextMatches.count > 0 %}
            {% set isloser = false %}
            {% set toloser = false %}
            <h3 class="page-heading bordered">Les {{ nextMatches.count }} prochains matchs</h3>
            <div class="row no-lines">
                {% for match in nextMatches %}
                    <div class="col-md-4 col-xs-12">
                        {% include 'brackets/match.html.twig' %}
                    </div>
                {% endfor %}
            </div>
        {% elseif (finalBracket.count > 0)  %}
            <div class="mt-2 mb-2">
                {% include 'brackets/finals-bracket.html.twig' %}
            </div>
        {% else %}
            <h2 class="text-center mt-3">Matches list coming soon !</h2>
        {% endif %}
        <p class="text-center mt-3">
            <a href="https://www.toornament.com" target="_blank"><img src="/assets/img/PoweredbyToor_White.png" alt="" width="200px"></a> <br/>
            <a href="https://codepen.io/jimmyhayek/pen/yJkdEB" target="_blank" class="text-light">System responsive Tournament Bracket by Jakub HÃ¡jek</a>
        </p>
    </div>
{% endblock %}
