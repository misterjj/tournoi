{% set opponnent1 = match.opponents.get(0) %}
{% set opponnent2 = match.opponents.get(1) %}
<div class="modal-header border-0">
    <div class="d-flex flex-column w-100">
        <div class="text-muted text-center">
            {{ match.roundName }} - Bo{{ gameList.count }}
        </div>
        <div class="d-flex flex-row w-100 align-items-center mt-1 mb-1">
            <div class="d-flex flex-column flex-sm-row w-100 align-items-center">
                <span class="fa-layers fa-fw fa-4x order-sm-0 order-sm-1">
                    <i class="fas fa-square {{ opponnent1.result == "win" ? 'text-warning' : ' text-secondary' }}"></i>
                    <span class="fa-layers-text fa-inverse" data-fa-transform="shrink-8">{{ opponnent1.score ?: match.status == "completed" ? '0' : '-'  }}</span>
                </span>
                <div class="h4 ml-sm-auto order-sm-0">{{ opponnent1.participant.name ?: 'TDB' }}</div>
            </div>
            <div class="d-flex flex-column flex-sm-row w-100 align-items-center">
                <span class="fa-layers fa-fw fa-4x">
                    <i class="fas fa-square {{ opponnent2.result == "win" ? 'text-warning' : ' text-secondary' }}"></i>
                    <span class="fa-layers-text fa-inverse" data-fa-transform="shrink-8">{{ opponnent2.score ?: match.status == "completed" ? '0' : '-'  }}</span>
                </span>
                <div class="h4 mr-sm-auto">{{ opponnent2.participant.name ?: 'TDB' }}</div>
            </div>
        </div>
        <div class="text-muted text-center">
            {{ match.scheduledDatetime|date('d M Y H:i') }}
        </div>
    </div>
</div>
<div class="modal-body">
    {% for game in gameList %}
        {% include 'brackets/game.html.twig' %}
    {% endfor %}
</div>
<div class="modal-footer border-0">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
</div>