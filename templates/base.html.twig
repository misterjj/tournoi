        <link rel="stylesheet" href="/assets/css/brackets.css">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg fixed-top navbar-dark d-flex flex-row align-items-center p-3 px-md-4 mb-3 box-shadow">
